{
  "$schema": "https://opencode.dev/schema/config.json",
  "_comment": "Generated by doyaken sync | {{TIMESTAMP}}",
  "_source": ".doyaken/",
  "instructions": {
    "files": [
      ".doyaken/AGENT.md",
      ".doyaken/manifest.yaml",
      "PROJECT.md"
    ],
    "prompts_library": ".doyaken/prompts/library/",
    "phases": ".doyaken/prompts/phases/",
    "skills": ".doyaken/skills/"
  },
  "commands": {
    "check-quality": {
      "description": "Run all quality checks",
      "command": "npm run lint && npm run typecheck && npm run test"
    },
    "setup-quality": {
      "description": "Set up quality gates",
      "prompt": ".doyaken/skills/setup-quality.md"
    },
    "audit-deps": {
      "description": "Security audit",
      "prompt": ".doyaken/skills/audit-deps.md"
    }
  },
  "quality": {
    "lint": "npm run lint",
    "typecheck": "npm run typecheck",
    "test": "npm run test",
    "build": "npm run build",
    "audit": "npm audit --audit-level=high"
  },
  "tasks": {
    "directory": ".doyaken/tasks/",
    "states": ["blocked", "todo", "doing", "done"]
  }
}
